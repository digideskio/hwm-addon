{
    "name": "Hulu With Me",
        "version": "0.8",
        "manifest_version": 2,
        "description": "Watch your favorite shows with your favorite people.",
        "permissions": [
            "webRequest",
            "tabs",
        "http://huluwithme.com/",
        "http://*.hulu.com/"
            ],
        "background": {
            "scripts": ["main.js"]
        },
        "content_scripts": [
        {
            "matches": ["*://huluwithme.com/*"],
            "js": ["check.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["http://www.hulu.com/watch/*"],
            "js": ["room-loader.js"],
            "css": ["style.css"]
        }
    ],
        "web_accessible_resources": ["jquery.js", "socket.io.js", "room.js"]
}
