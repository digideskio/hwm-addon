{
    "name": "Hulu With Me",
        "version": "0.8",
        "manifest_version": 2,
        "description": "Watch your favorite shows with your favorite people.",
        "permissions": [
            "webRequest",
            "tabs",
            "notifications",
            "http://huluwith.me",
            "http://*.hulu.com/"
            ],
        "background": {
            "scripts": ["background.js"]
        },
        "content_scripts": [
        {
            "matches": ["*://huluwith.me/i/*"],
            "js": ["check.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["http://www.hulu.com/watch/*"],
            "js": ["room-loader.js"],
            "css": ["style.css"]
        }
    ],
    "web_accessible_resources": [
        "jquery.js",
        "socket.io.js",
        "room.js",
        "imgs/notification.png",
        "imgs/notification-chat.png",
        "imgs/notification-pause.png",
        "imgs/notification-play.png",
        "imgs/notification-seek_forward.png",
        "imgs/notification-seek_back.png",
        "imgs/notification-commercial.png"
    ]
}
